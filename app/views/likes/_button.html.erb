 <%= pluralize(likeable.likes.count, "Like") %>
<% if current_user %>
  <% if current_user.likes.find_by(likeable: likeable).nil? %>
    <%= button_to  "Like", likes_path, params: { like: { likeable_id: likeable.id, likeable_type: likeable.class.to_s } }, method: :post %>
  <% else %>
    <%= button_to "Unlike", like_path(current_user.likes.find_by(likeable: likeable)), method: :delete %>
  <% end %>
<% end %>
